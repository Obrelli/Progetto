    <script>
      function eliminaPrenotazione(id_prenotazione){
        url = '/prenotazioni/prenotazione_spec/annulla?idP='.concat(id_prenotazione);
        console.log("test "+id_prenotazione);
        $.ajax({
          url : url,
          method : 'delete',
          success: function(){
                // location.reload();
                document.location.href = "/prenotazioni";
            }
        })
       }
    </script>
</div> 
